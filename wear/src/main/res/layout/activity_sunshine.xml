<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context="com.example.android.sunshine.app.SunshineActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CLOCK"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRI, JUL 14 2015"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/date_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CITY"
            android:gravity="center"
            android:textColor="@color/date_color"
            android:textSize="20dp" />


    </LinearLayout>

    <View
        android:id="@+id/horizontal_ruler"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/horizontal_rule_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageButton
            android:id="@+id/days_weather_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@null"
            android:src="@drawable/art_clear" />

        <TextView
            android:id="@+id/higher_degree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:background="@null"
            android:gravity="center|center"
            android:text="25&#xb0;C"
            android:textColor="@color/higher_degree_color"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lower_degree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:gravity="center|center"
            android:text="16&#xb0;C"
            android:textColor="@color/lower_degree_color"
            android:textSize="18dp" />

    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>
